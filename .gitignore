# CodeIgniter 4 .gitignore

#-------------------------
# Operating System Files
#-------------------------

# OSX
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db

# Windows
Thumbs.db
Thumbs.db:encryptable
ehthumbs.db
ehthumbs_vista.db
*.tmp
*.temp
*.bak
*.bakx
~$*

#-------------------------
# Environment Files
#-------------------------
.env
.env.production
.env.development
.env.testing

#-------------------------
# Temporary and Log Files
#-------------------------
/writable/cache/*
/writable/debugbar/*
/writable/logs/*
/writable/session/*
/writable/uploads/*

# Keep folder structure but ignore contents
!writable/cache/index.html
!writable/debugbar/index.html
!writable/logs/index.html
!writable/session/index.html
!writable/uploads/index.html

#-------------------------
# User Guide
#-------------------------
/user_guide_src/build/*
/user_guide_src/cilexer/build/*
/user_guide_src/cilexer/dist/*
/user_guide_src/cilexer/pycilexer.egg-info/*

#-------------------------
# Composer
#-------------------------
/vendor/
composer.lock

#-------------------------
# IDE Files
#-------------------------
# PHPStorm
.idea/
*.iml

# VSCode
.vscode/
.history/

# Sublime Text
*.sublime-project
*.sublime-workspace

# NetBeans
nbproject/
build/
nbbuild/
dist/
nbdist/
.nb-gradle/

#-------------------------
# Node.js (if using frontend tools)
#-------------------------
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*
.npm
.yarn-integrity

#-------------------------
# Build Files
#-------------------------
/build/
/dist/

#-------------------------
# Database Files
#-------------------------
*.sqlite
*.db

#-------------------------
# FTP/Deployment Files
#-------------------------
ftpsync.settings
*.ftp
deploy.sh
upload.sh

#-------------------------
# Storage and Upload Files
#-------------------------
storage.json
/public/uploads/*
!public/uploads/index.html
!public/uploads/.htaccess

#-------------------------
# Configuration Files with Sensitive Data
#-------------------------
/app/Config/Database.php
/app/Config/Email.php

#-------------------------
# Backup Files
#-------------------------
*.backup
*.bak
*.orig
*.rej

#-------------------------
# Package Files
#-------------------------
*.7z
*.dmg
*.gz
*.iso
*.jar
*.rar
*.tar
*.zip

#-------------------------
# Custom Project Files
#-------------------------
# Add any project-specific files to ignore here
*.local
*.development
*.production
test.php
debug.php
